#:kivy 1.10.1
<NeedleRadial>:
    canvas.before:
        PushMatrix
        Translate:
            xy: (self.x + self.width / 2, self.y + self.height / 2)
        Rotate:
            angle: self.update
            axis: (0, 0, 1.0)
        Translate:
            xy: (-self.x - self.width / 2, - self.y - self.height / 2)
    canvas.after:
        PopMatrix

<Background>:
    canvas:
        Rectangle:
            source: app.background
            size: self.size
            pos: self.pos

<NeedleLinear>:
    canvas:
        Color:
            rgba: self.r, self.g, self.b, self.a
        Rectangle:
            size: self.update, self.height + self.height / 2
            pos: self.x, root.center_y - self.height / 1.5
            source: self.source

<NeedleEllipse>:
    canvas:
        Color:
            rgba: self.r, self.g, self.b, self.a
        Ellipse:
            size: self.height, self.height
            pos: self.x + (self.width - self.height) / 2, self.y
            source: self.source
            angle_start: self.angle_start
            angle_end: self.angle_start + self.update + 12

<Alert>:
    canvas.before:
        Rectangle:
            pos: (self.center_x - ( self.width / 4. ), self.center_y - (self.height / 4))
            size: self.width / 2, self.height / 2.
            source: 'static/imgs/Alerts/fordWarning.png'


<TickMarks>:
    canvas:
        Color:
            rgba: self.r, self.g, self.b, self.a
