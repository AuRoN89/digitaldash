#:kivy 1.0

<Alert>:
    ellipsis_options: {'color':(1,0.5,0.5,1),'underline':True}
    shorten: True
    markup: True
    shorten_from: 'right'
    halign: 'center'
    valign: 'middle'
    size_hint: 0.4, 0.5
    pos_hint: {"center_x": 0.50, "center_y": 0.85}
    canvas.before:
        Color:
            hsv: self.color
            a: 0.97
        Rectangle:
            id: 'Alert-'+str(self.message)
            size: self.size
            pos: self.pos
            source: app.working_path+'/static/imgs/Alerts/FordWarning.png' if hasattr(app, 'working_path') else 'static/imgs/Alerts/FordWarning.png'
